<Window x:Class="YProgramStudio.LabelsDesigner.Gui.LabelReference"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YProgramStudio.LabelsDesigner.Gui"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="400"
		     Width="400" Height="260" ShowInTaskbar="False" WindowStyle="ToolWindow" WindowStartupLocation="CenterOwner" Topmost="True">
	<TabControl x:Name="mainTab">
		<TabItem x:Name="labelTabItem" Header="本地化设置">
			<StackPanel>
				<GroupBox Margin="5" Header="单位" Height="auto">
					<StackPanel>
						<RadioButton GroupName="a" Margin="5" Content="英寸In" />
						<RadioButton GroupName="a" Margin="5" Content="毫米mm" IsChecked="True" />
						<RadioButton GroupName="a" Margin="5" Content="厘米Centimeters" />
						<RadioButton GroupName="a" Margin="5" Content="像素" />
						<RadioButton GroupName="a" Margin="5" Content="皮Picas" />
					</StackPanel>
				</GroupBox>
				<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
					<Button Margin="5">确定</Button>
					<Button Margin="5">取消</Button>
				</StackPanel>
			</StackPanel>
		</TabItem>
	</TabControl>
</Window>
